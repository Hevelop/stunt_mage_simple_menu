<?xml version="1.0"?>
<config>
    <modules>
        <Stuntcoders_Simplemenu>
            <version>1.1.1</version>
        </Stuntcoders_Simplemenu>
    </modules>
    <global>
        <models>
            <stuntcoders_simplemenu>
                <class>Stuntcoders_Simplemenu_Model</class>
                <resourceModel>stuntcoders_simplemenu_resource</resourceModel>
            </stuntcoders_simplemenu>
            <stuntcoders_simplemenu_resource>
                <class>Stuntcoders_Simplemenu_Model_Resource</class>
                <entities>
                    <simplemenu>
                        <table>stuntcoders_simplemenu</table>
                    </simplemenu>
                </entities>
            </stuntcoders_simplemenu_resource>
        </models>
        <blocks>
            <stuntcoders_simplemenu>
                <class>Stuntcoders_Simplemenu_Block</class>
            </stuntcoders_simplemenu>
        </blocks>
        <helpers>
            <stuntcoders_simplemenu>
                <class>Stuntcoders_Simplemenu_Helper</class>
            </stuntcoders_simplemenu>
        </helpers>
        <resources>
            <stuntcoders_simplemenu_setup>
                <setup>
                    <module>Stuntcoders_Simplemenu</module>
                </setup>
            </stuntcoders_simplemenu_setup>
        </resources>
    </global>
    <adminhtml>
        <acl>
            <resources>
                <admin>
                    <children>
                        <cms>
                            <children>
                                <simplemenu translate="title" module="stuntcoders_simplemenu">
                                    <title>Simple Menu</title>
                                </simplemenu>
                            </children>
                        </cms>
                    </children>
                </admin>
            </resources>
        </acl>
        <menu>
            <cms>
                <children>
                    <simplemenu translate="title" module="stuntcoders_simplemenu">
                        <title>Simple Menu</title>
                        <sort_order>0</sort_order>
                        <action>adminhtml/simplemenu/index</action>
                    </simplemenu>
                </children>
            </cms>
        </menu>
        <layout>
            <updates>
                <stuntcoders_simplemenu>
                    <file>stuntcoders/simplemenu.xml</file>
                </stuntcoders_simplemenu>
            </updates>
        </layout>
        <translate>
            <modules>
                <Custom_Module>
                    <files>
                        <default>Custom_Module.csv</default>
                    </files>
                </Custom_Module>
            </modules>
        </translate>
        <translate>
            <modules>
                <Stuntcoders_Simplemenu>
                    <files>
                        <default>Stuntcoders_Simplemenu.csv</default>
                    </files>
                </Stuntcoders_Simplemenu>
            </modules>
        </translate>
    </adminhtml>
    <admin>
        <routers>
            <adminhtml>
                <args>
                    <modules>
                        <Stuntcoders_Simplemenu before="Mage_Adminhtml">Stuntcoders_Simplemenu_Adminhtml</Stuntcoders_Simplemenu>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>
</config>
